<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aap="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_height="wrap_content"
    android:padding="2dp"
    app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        aap:cardCornerRadius="35dp" >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:id="@+id/imgViewCRI1"
            android:src="@drawable/festa1" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txtCRI1"
        android:layout_gravity="center"
        android:fontFamily="@font/ralewaysemi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Festivais"/>

</LinearLayout>
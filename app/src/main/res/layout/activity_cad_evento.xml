<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrudEvento.CadEvento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@color/cardview_shadow_start_color">

                <ImageView
                    android:layout_marginTop="2dp"
                    android:padding="3dp"
                    android:id="@+id/btnVoltaPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_baseline_arrow_back_ios_24" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cadastrar Evento"
                android:fontFamily="@font/amaranth"
                android:textSize="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText


                    android:layout_margin="10dp"
                    android:id="@+id/EdtNomeEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/cardview_shadow_start_color"
                    android:padding="10dp"
                    android:hint="Nome"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:layout_margin="5dp"
                    android:background="@color/cardview_shadow_start_color"
                    android:padding="10dp"
                    android:id="@+id/CadData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:ems="12"
                    android:hint="Data"
                    android:inputType="textPersonName" />

                <EditText
                    android:layout_margin="5dp"

                    android:background="@color/cardview_shadow_start_color"
                    android:padding="10dp"
                    android:id="@+id/CadHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Hora"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <EditText
                    android:layout_margin="5dp"

                    android:background="@color/cardview_shadow_start_color"
                    android:padding="10dp"
                    android:id="@+id/Edtcidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:ems="14"
                    android:hint="Cidade do Evento"
                    android:inputType="textPersonName" />

                <EditText
                    android:layout_margin="5dp"

                    android:background="@color/cardview_shadow_start_color"
                    android:padding="10dp"
                    android:id="@+id/Edtestado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:hint="Estado"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_margin="5dp"

                    android:background="@color/cardview_shadow_start_color"
                    android:padding="10dp"
                    android:id="@+id/EdtvalorTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:hint="Valor"
                    android:inputType="textPersonName" />

                <EditText
                    android:layout_margin="5dp"

                    android:background="@color/cardview_shadow_start_color"
                    android:padding="10dp"
                    android:id="@+id/Edttipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Tipo do Evento"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCadEvento"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Cadastrar evento"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"/>
<!--                android:background="@drawable/button"-->


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Perfil">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:padding="5dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sair"
            android:textColor="#FF2424"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:paddingRight="70dp"
            android:paddingLeft="70dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/opacity2"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:id="@+id/image"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    app:cardCornerRadius="85dp">

                    <ImageView

                        android:id="@+id/imgViewCRI1"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_person_24" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nomePerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ralewaybold"
                    android:gravity="center"
                    android:text="Nome"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/emailPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ralewaysemi"
                    android:gravity="center"
                    android:text="nome@gmail.com"
                    android:textColor="#878787"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/edtDU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_shadow_start_color"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:fontFamily="@font/ralewaysemi"
                android:padding="10dp"
                android:text="Editar dados de usuÃ¡rio"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/texTelaSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/cardview_shadow_start_color"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:fontFamily="@font/ralewaysemi"
                android:padding="10dp"
                android:text="Mudar senha"
                android:textSize="17dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/edtCadEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_shadow_start_color"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:fontFamily="@font/ralewaysemi"
                android:padding="10dp"
                android:text="Cadastrar evento"
                android:textSize="17dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/btnEditEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_shadow_start_color"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:fontFamily="@font/ralewaysemi"
                android:padding="10dp"
                android:text="Editar dados do Evento"
                android:textSize="17dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>